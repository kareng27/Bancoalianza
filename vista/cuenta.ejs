                     <div class="entry-form5">
                          <form class="marco" action="frmcuenta" method="post">
                               <h2>Cuenta</h2><br>
                               <input type="text" name="CueCod" class="form-control5" placeholder="Codigo" required="">
                               <input type="text" name="CueDoc" class="form-control5" placeholder="Documento" required="">
                               <input type="text" name="CueTipo" class="form-control5" placeholder="Tipo de cuenta" required="">
                               <input type="text" name="CueSaldo" class="form-control5" placeholder="Saldo" required="">
                               <button class="submit-btn form-control" id="form-submit">Siguiente</button>
                              </form>
                     </div>

 </section>

 <from action="" name="frm" id="frm">
  <table class="table">
      <thead>
          <tr>

              <th>CODIGO</th>
              <th>Documento</th>
              <th>TIPO</th>
              <th>SALDO</th>
              <th>ELIMINAR</th>

          </tr>
      </thead>

      <tbody>
       <% datos.forEach(function (datos){ %>    
          <tr>
              <td><input type="text" value="<%=datos.CueCod%>" name="codigo" id="cod" class="cod"></td>
              <td><input type="text" value="<%=datos.CueDoc%>" name="CueDoc" id="doc" class="doc"></td>
              <td><input type="text" value="<%=datos.CueTipo%>" name="cuetipo" id="cuetipo" class="cuetipo"></td>
              <td><input type="text" value="<%=datos.CueSaldo%>" name="cuesaldo" id="cuesaldo" class="cuesaldo"></td>
              <td><input type="submit" value="Eliminar" name="btneli" id="btneli" class="btneli"></td>
          </tr>
       <%})%>
      </tbody>
  </table>
</from>

<script src="https://unpkg.com/scrollreveal"></script>
